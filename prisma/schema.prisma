generator client {
  provider = "prisma-client-js"
}

generator json {
  provider = "prisma-json-types-generator"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model Story {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  user_id String 
  enemy String
  hero String
  hero_name String
  enemy_name String
  story_acts StoryAct[]
}

model StoryAct {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    story Story @relation(fields: [story_id], references: [id])
    story_id Int 
    pollId String?
    type String
    /// [Response]
    data Json
}
